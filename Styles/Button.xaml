<UserControl x:Class="OOP_EventsManagementSystem.Styles.Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OOP_EventsManagementSystem.Styles"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius="20" Background="{Binding ButtonBackground, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                Width="100" Height="35" Margin="5,5,5,5">
            <Button Width="100" Height="35" Background="Transparent" BorderBrush="{x:Null}" Click="Button_Click">
                <TextBlock Text="{Binding ButtonText, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           FontFamily="Bahnschrift SemiBold" FontSize="18"  />
            </Button>
        </Border>
    </Grid>
</UserControl>
