<UserControl x:Class="OOP_EventsManagementSystem.Styles.EventDetailCard_v2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OOP_EventsManagementSystem.Styles"
             xmlns:mascos="clr-namespace:OOP_EventsManagementSystem.Styles"
             mc:Ignorable="d" 
             Height="130" Width="290">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="72*"/>
            <ColumnDefinition Width="28*"/>
        </Grid.ColumnDefinitions>
        <!--Left Col-->
        <Grid Grid.Column="0">
            <Border CornerRadius="8" Background="#C6C3F2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="80*"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0">

                            <!-- TextBlock -->
                            <TextBlock Text="easys presents" FontSize="6" VerticalAlignment="Center" Margin="10,0,2,1" Foreground="#FFFCF8F8" />
                            <!-- Red Line -->
                            <Rectangle Width="3" Height="15" Fill="#FFD6DC82" VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                    <!--Main content-->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="13*"/>
                            <RowDefinition Height="18*"/>
                            <RowDefinition Height="27*"/>
                            <RowDefinition Height="27*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Background="White">
                            <TextBlock Text="EVENT NAME" VerticalAlignment="Bottom" Margin="10,0,0,0" FontSize="13" FontWeight="Bold" Foreground="#FF262628"/>
                        </Grid>
                        <Grid Grid.Row="1">
                            <TextBlock Text="VENUE" VerticalAlignment="Top" Margin="10,0,0,0" FontSize="13" FontWeight="Bold" Foreground="#FFFCF8F8"/>
                        </Grid>
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="25*"/>
                                <ColumnDefinition Width="25*"/>
                                <ColumnDefinition Width="40*"/>
                            </Grid.ColumnDefinitions>

                            <Grid>
                                <StackPanel Margin="10,0,0,0">
                                    <TextBlock Text="START" FontWeight="Bold" FontSize="8" Foreground="#FFFCF8F8"/>
                                    <TextBlock Text="dd/mm" Foreground="#FFFCF8F8"/>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Column="1">
                                <StackPanel Margin="10,0,0,0">
                                    <TextBlock Text="END" FontWeight="Bold" FontSize="8" Foreground="#FFFCF8F8"/>
                                    <TextBlock Text="dd/mm" Foreground="#FFFCF8F8"/>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Column="2">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,4">
                                    <!-- Barcode Bars -->
                                    <Rectangle Width="9" Height="50" Fill="White" Margin="1,0" />
                                    <Rectangle Width="4" Height="50" Fill="White" Margin="1,0" />
                                    <Rectangle Width="2" Height="50" Fill="White" Margin="1,0" />
                                    <Rectangle Width="6" Height="50" Fill="White" Margin="1,0" />
                                    <Rectangle Width="2" Height="50" Fill="White" Margin="1,0" />
                                    <Rectangle Width="4" Height="50" Fill="White" Margin="1,0" />
                                    <Rectangle Width="8" Height="50" Fill="#D6DC82" Margin="1,0" />
                                    <Rectangle Width="3" Height="50" Fill="White" Margin="1,0" />
                                    <Rectangle Width="1" Height="50" Fill="White" Margin="1,0" />
                                    <Rectangle Width="7" Height="50" Fill="White" Margin="1,0" />
                                    <Rectangle Width="1" Height="50" Fill="White" Margin="1,0" />
                                    <Rectangle Width="1" Height="50" Fill="White" Margin="1,0" />
                                    <Rectangle Width="3" Height="50" Fill="White" Margin="1,0" />
                                    <Rectangle Width="9" Height="50" Fill="White" Margin="1,0" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <!--Right Col-->
        <Grid Grid.Column="1">
            <Border CornerRadius="8" Background="#D96073">
                <mascos:CuteMascot/>
            </Border>
        </Grid>
        <Line X1="0" Y1="0" X2="0" Y2="125" 
          Stroke="White" StrokeThickness="2" StrokeDashArray="5,3"
          HorizontalAlignment="Left" Margin="208,12,0,7" Grid.ColumnSpan="2" />
    </Grid>
</UserControl>
