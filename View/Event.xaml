<UserControl x:Class="OOP_EventsManagementSystem.View.Event"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OOP_EventsManagementSystem.View"
             mc:Ignorable="d" 
             Height="600" 
             Width="850"
             Background="Transparent">
    <Grid>
        <Border Background="#FFF6EF"
        CornerRadius="12">
        </Border>
        <Canvas Width="850" Height="600">
            <!-- Background Rectangle -->
            <!-- Background Rectangle -->
            <Rectangle Width="850" Height="600" Fill="#FFF6EF" RadiusX="12" RadiusY="12" />

            <Rectangle Width="850" Height="50" Fill="White" Canvas.Left="0" HorizontalAlignment="Center" VerticalAlignment="Center" />

            <!-- Sidebar -->
            <Rectangle Width="140" Height="600" Fill="#262628" Canvas.Left="0" HorizontalAlignment="Left" VerticalAlignment="Center" />

            <!-- Text elements -->
            <TextBlock Text="easys" FontSize="36" FontWeight="Bold" Foreground="#D6DC82" 
                       FontFamily="Bahnschrift SemiBold" Canvas.Left="24" Canvas.Top="40" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <TextBlock Text="MENU" FontSize="14" FontWeight="Normal" Foreground="#44444C" 
                       FontFamily="Bahnschrift Light" Canvas.Left="10" Canvas.Top="113" />

            <!-- Event Title -->
            <TextBlock Text="Today’s Events" FontSize="36" Foreground="#262628"
                       FontFamily="Bahnschrift SemiBold" Canvas.Left="180" Canvas.Top="81" />

            <!-- Event Box -->
            <Rectangle Width="228" Height="68" Fill="#D96073" RadiusX="16" RadiusY="16" 
                       Canvas.Left="1130" Canvas.Top="175" />
            <TextBlock Text="Add event" FontSize="32" Foreground="#FFF6EF"
                       FontFamily="Poppins" Canvas.Left="1158" Canvas.Top="184" />

            <Canvas Width="480" Height="233" Canvas.Left="345" Canvas.Top="393">
                <!-- Rectangle6 -->
                <Rectangle Width="480" Height="232" Fill="White" RadiusX="12" RadiusY="12" 
                           Stroke="#000000" Canvas.Left="0" Canvas.Top="1" />
                <Image Width="367" Height="232" Canvas.Top="1" Source="pack://application:,,,/Resources/Images/event2.jpg" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Image.Clip>
                        <RectangleGeometry Rect="0,0,367,232" RadiusX="16" RadiusY="16" />
                    </Image.Clip>
                </Image>
                <Grid Height="90" Canvas.Left="498" Canvas.Top="27" Width="128">
                    <TextBlock Text="9" FontSize="40" Foreground="#262628" FontFamily="Poppins" Margin="56,0,50,42" />
                    <TextBlock Text="th" FontSize="16" Foreground="#262628" FontFamily="Poppins" Margin="83,10,31,61" />
                    <TextBlock Text="16:00 | 23:00" FontSize="13" Foreground="#262628" FontFamily="Poppins" Margin="56,74,0,0" />
                    <TextBlock Text="DEC" FontSize="30" Foreground="#262628" FontFamily="Poppins" Margin="56,43,17,11" />
                    <TextBlock Text="MONDAY" FontSize="20" Foreground="#262628" FontFamily="Poppins" RenderTransformOrigin="0.5,0.5" Margin="0,36,44,30" >
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-90.101"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </Grid>


                <TextBlock Text="GenFest 2024" FontSize="20" Foreground="#FFF6EF" FontFamily="Poppins" Canvas.Left="212" Canvas.Top="199" />
            </Canvas>
            <Rectangle Width="140" Height="35" Fill="#FFD6DC82" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="135" />
            <!-- Menu items -->
            <TextBlock Text="Event" FontSize="18" FontWeight="Medium" Foreground="#262628" 
                       FontFamily="Bahnschrift SemiCondensed" Canvas.Left="50" Canvas.Top="142" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBlock Text="Event" FontSize="18" FontWeight="Medium" Foreground="#FFFFF6EF" 
                FontFamily="Bahnschrift SemiCondensed" Canvas.Left="50" Canvas.Top="180" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBlock Text="Event" FontSize="18" FontWeight="Medium" Foreground="#FFFFF6EF" 
                FontFamily="Bahnschrift SemiCondensed" Canvas.Left="50" Canvas.Top="218" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBlock Text="Event" FontSize="18" FontWeight="Medium" Foreground="#FFFFF6EF" 
                FontFamily="Bahnschrift SemiCondensed" Canvas.Left="50" Canvas.Top="256" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBlock Text="Event" FontSize="18" FontWeight="Medium" Foreground="#FFFFF6EF" 
                FontFamily="Bahnschrift SemiCondensed" Canvas.Left="50" Canvas.Top="294" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBlock Text="Event" FontSize="18" FontWeight="Medium" Foreground="#FFFFF6EF" 
                FontFamily="Bahnschrift SemiCondensed" Canvas.Left="50" Canvas.Top="332" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <Button Content="Button" Canvas.Left="688" Canvas.Top="85" Click="Button_Click" Background="#FFD96073" BorderBrush="{x:Null}" Foreground="#FFFFF6EF" FontFamily="Bahnschrift SemiCondensed" Height="50" Width="100" FontSize="18"/>

            <!-- More components can be added here with similar logic -->
        </Canvas>
    </Grid>
</UserControl>
