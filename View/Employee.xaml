<UserControl x:Class="OOP_EventsManagementSystem.View.Employee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OOP_EventsManagementSystem.View"
      xmlns:styles="clr-namespace:OOP_EventsManagementSystem.Styles"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="555" d:DesignWidth="850"
      >

    <Grid Background="#EFE9E4" Margin="0,0,0,-435">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="70*"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <Border CornerRadius="16" Background="White" Height="35" Width="80" Margin="15,10,5,5"  HorizontalAlignment="Left">
                    <ComboBox Margin="5"
                        materialDesign:HintAssist.Hint="Monthly">
                        <ComboBoxItem Content="Weekly" />
                        <ComboBoxItem Content="Monthly" />
                        <ComboBoxItem Content="Yearly" />
                    </ComboBox>
                </Border>
                <Border CornerRadius="16" Background="White" Height="55" Width="225" Margin="15,10,5,5" HorizontalAlignment="Left" >
                    <Grid>
                        <TextBlock Text="Total Employees" Margin="10,5,10,5" FontFamily="Bahnschrift SemiLight" FontSize="16" />
                        <TextBlock Text="205" Margin="10,5,10,5" FontFamily="Bahnschrift SemiLight" FontSize="16" VerticalAlignment="Bottom" />
                        <TextBlock Text="+5% last month" Margin="10,5,10,5" FontFamily="Bahnschrift SemiLight" FontSize="16" VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="#FFA8B31D"/>
                    </Grid>
                </Border>
                <Border CornerRadius="16" Background="White" Height="55" Width="225" Margin="15,10,5,5" HorizontalAlignment="Left" >
                    <Grid>
                        <TextBlock Text="New Employees" Margin="10,5,10,5" FontFamily="Bahnschrift SemiLight" FontSize="16" />
                        <TextBlock Text="20" Margin="10,5,10,5" FontFamily="Bahnschrift SemiLight" FontSize="16" VerticalAlignment="Bottom" />
                        <TextBlock Text="+2% last month" Margin="10,5,10,5" FontFamily="Bahnschrift SemiLight" FontSize="16" VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="#FFA8B31D"/>
                    </Grid>
                </Border>
                <Border CornerRadius="16" Background="White" Height="265" Width="225" Margin="15,10,5,5" HorizontalAlignment="Left" >
                    <Grid>
                        <TextBlock Text="Best Employee" Margin="10,5,10,5" FontFamily="Bahnschrift SemiLight" FontSize="16" />
                        <Image Source="pack://application:,,,/Resources/Images/event2.jpg" Width="170" Height="170" Stretch="UniformToFill" Margin="25,20,25,40">
                            <Image.Clip>
                                <EllipseGeometry Center="85,85" RadiusX="85" RadiusY="85" />
                            </Image.Clip>
                        </Image>
                        <Image Source="pack://application:,,,/Resources/Images/crown.png" Height="40" Width="40" Margin="15,27,170,198" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-43.221"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                        <TextBlock Text="Employee Name" Margin="0,0,0,35" FontFamily="Bahnschrift SemiLight" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                        <TextBlock Text="more than 250 hour" Margin="0,0,0,10" FontFamily="Bahnschrift Light Condensed" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="#FFA8B31D" />
                    </Grid>
                </Border>

            </StackPanel>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="14*"/>
                    <RowDefinition Height="70*"/>
                    <RowDefinition Height="28*"/>
                </Grid.RowDefinitions>
                <!-- List Employee wwork today -->
                <TextBlock Text="Today" Margin="20,35,10,5" FontFamily="Bahnschrift SemiBold" FontSize="16" />
                <Grid Grid.Row="1">

                    <Rectangle Fill="#D6DC82" RadiusX="16" RadiusY="16" Margin="10,0,30,15" Height="280" VerticalAlignment="Top"/>
                    <Border Grid.Column="1" CornerRadius="16" Background="White" Margin="25,15,10,0" Height="280" VerticalAlignment="Top">

                        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Background="Transparent" Margin="0,45,0,0"/>
                    </Border>

                    <styles:SearchBar Margin="0,25,140,0" VerticalAlignment="Top"/>
                </Grid>
                <!-- Button -->
                <Grid Grid.Row="2">
                    <styles:Button ButtonBackground="#D6DC82" ButtonText="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,0,0"/>
                    <styles:Button ButtonBackground="#C6C3F2" ButtonText="Edit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="115,0,0,0"/>
                    <styles:Button ButtonBackground="#D96073" ButtonText="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="225,0,0,0"/>

                </Grid>
                <!-- Mascot -->
                <Grid Grid.Row="2">
                    <Rectangle Fill="#D6DC82" Margin="520,16,10,0" Height="120" VerticalAlignment="Top"/>
                    <Polygon Points="50,30, 0,100 100,100"
      Fill="#C6C3F2"  Margin="421,38,70,-14"
/>
                    <Line X1="0" Y1="0" X2="23" Y2="0" Stroke="Black" StrokeThickness="3"
      RenderTransformOrigin="0,0" HorizontalAlignment="Left" Height="11" VerticalAlignment="Top" Margin="555,31,0,0" Width="17">
                        <Line.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="90"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Line.RenderTransform>
                    </Line>
                    <Ellipse Width="85" Fill="#D96073" HorizontalAlignment="Left" Margin="492,53,0,-14" />
                    <Ellipse Width="20" Fill="#FFFBF8" HorizontalAlignment="Left" Margin="505,85,0,19" RenderTransformOrigin="0.5,0.5" >
                        <Ellipse.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="-1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <Ellipse Width="5" Fill="#262628" HorizontalAlignment="Left" Margin="507,91,0,28" />
                    <Ellipse Width="19" Fill="#FFFBF8" HorizontalAlignment="Left" Margin="450,82,0,23" RenderTransformOrigin="0.5,0.5" >
                        <Ellipse.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="-1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <Line X1="0" Y1="0" X2="23" Y2="0" Stroke="Black" StrokeThickness="1"
      RenderTransformOrigin="0,0" HorizontalAlignment="Left" Height="10" VerticalAlignment="Top" Margin="473,98,0,0" Width="23">
                        <Line.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform />
                                <TranslateTransform/>
                            </TransformGroup>
                        </Line.RenderTransform>
                    </Line>
                    <Ellipse Width="20" Fill="#FFFBF8" HorizontalAlignment="Left" Margin="538,67,0,37" RenderTransformOrigin="0.5,0.5" >
                        <Ellipse.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="-1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <Ellipse Width="5" Fill="#262628" HorizontalAlignment="Left" Margin="540,73,0,46" />
                    <Ellipse Width="5" Fill="#262628" HorizontalAlignment="Left" Margin="455,94,0,25" />
                    <Ellipse Width="20" Fill="#FFFBF8" HorizontalAlignment="Left" Margin="525,22,0,82" RenderTransformOrigin="0.5,0.5" >
                        <Ellipse.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="-1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <Ellipse Width="5" Fill="#262628" HorizontalAlignment="Left" Margin="527,25,0,94" />
                    <Ellipse Width="20" Fill="#FFFBF8" HorizontalAlignment="Left" Margin="563,22,0,82" RenderTransformOrigin="0.5,0.5" >
                        <Ellipse.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="-1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <Ellipse Width="5" Fill="#262628" HorizontalAlignment="Left" Margin="565,25,0,94" />
                    <Line X1="0" Y1="0" X2="23" Y2="0" Stroke="Black" StrokeThickness="3"
                        RenderTransformOrigin="0,0" HorizontalAlignment="Left" Height="10" VerticalAlignment="Top" Margin="570,18,0,0" Width="19">
                        <Line.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="33.572"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Line.RenderTransform>
                    </Line>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel>
                
            
            <TextBlock Text="List Show" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontFamily="Bahnschrift SemiBold" Margin="10,10,10,0"/>
            <Grid >

                <Rectangle Fill="#FFD96073" RadiusX="16" RadiusY="16" Margin="10,0,30,15" Height="350" VerticalAlignment="Top"/>
                <Border Grid.Column="1" CornerRadius="16" Background="White" Margin="25,15,10,0" Height="350" VerticalAlignment="Top">

                    <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Background="Transparent" Margin="0,45,0,0"/>
                </Border>

                <styles:SearchBar Margin="40,25,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            </Grid>
            </StackPanel>
        </Grid>
            
        <!-- Rectangle added -->

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="45*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1" d:IsHidden="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="70*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>
                <Border CornerRadius="16" Grid.Row="1" Background="White">
                    <Grid>
                        <DataGrid Background="Transparent" d:ItemsSource="{d:SampleData ItemCount=10}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                        </DataGrid>
                    </Grid>

                </Border>
            </Grid>

            <Grid Grid.Column="2" d:IsHidden="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1">
                    <Border CornerRadius="16" Background="#c6c3f2" Margin="10,0,10,0">
                        <Rectangle VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                        </Rectangle>

                    </Border>
                    <TextBlock FontSize="16" FontWeight="Bold" Text="Total" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="25,0,0,0" />
                </Grid>
                <Grid Grid.Row="2">
                    <Border CornerRadius="16" Background="#c6c3f2" Margin="10,10,10,115">
                        <Rectangle VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        </Rectangle>
                    </Border>
                    <Grid>
                        <StackPanel Margin="20">
                            <TextBlock Text="Name"/>
                            <Border CornerRadius="16" Background="White">
                                <TextBox BorderThickness="0,0,0,0"/>
                            </Border>
                            <TextBlock Text="Contact"/>
                            <Border CornerRadius="16" Background="White">
                                <TextBox BorderThickness="0,0,0,0"/>
                            </Border>
                            <TextBlock Text="Role"/>
                            <Border CornerRadius="16" Background="White">
                                <TextBox BorderThickness="0,0,0,0"/>
                            </Border>
                            <TextBlock Text="Account"/>
                            <Border CornerRadius="16" Background="White">
                                <TextBox BorderThickness="0,0,0,0"/>
                            </Border>
                            <Border>
                                <TextBlock Text="Event list" HorizontalAlignment="Right" Margin="10" TextDecorations="Underline"/>
                            </Border>
                        </StackPanel>

                    </Grid>

                </Grid>

            </Grid>

        </Grid>
    </Grid>
</UserControl>
