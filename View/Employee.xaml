<UserControl x:Class="OOP_EventsManagementSystem.View.Employee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OOP_EventsManagementSystem.View"
             xmlns:styles="clr-namespace:OOP_EventsManagementSystem.Styles"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="555"
             d:DesignWidth="850">
    <ScrollViewer>
        <Grid Background="#EFE9E4"
              Height="900">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*" />
                    <ColumnDefinition Width="70*" />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Today Event"
           Margin="10,35,10,5"
           FontFamily="Bahnschrift SemiBold"
           FontSize="18" />
                    <Border CornerRadius="16"
                            Background="White"
                            Height="280"
                            Width="225"
                            Margin="15,10,5,5"
                            HorizontalAlignment="Left">
                        <Grid>
                            <DataGrid/>
                        </Grid>
                    </Border>
                </StackPanel>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="14*" />
                        <RowDefinition Height="70*" />
                        <RowDefinition Height="28*" />
                    </Grid.RowDefinitions>
                    <!-- List Employee wwork today -->
                    <TextBlock Text="Working Employee Today"
                               Margin="20,35,10,5"
                               FontFamily="Bahnschrift SemiBold"
                               FontSize="18" />
                    <Grid Grid.Row="1">
                        <Rectangle Fill="#D6DC82"
                                   RadiusX="16"
                                   RadiusY="16"
                                   Margin="10,0,45,15"
                                   Height="280"
                                   VerticalAlignment="Top" />
                        <Border Grid.Column="1"
                                CornerRadius="16"
                                Background="White"
                                Margin="25,15,25,0"
                                Height="280"
                                VerticalAlignment="Top">
                            <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}"
                                      Background="Transparent"
                                      Margin="0,45,0,0" />
                        </Border>
                        <styles:SearchBar Margin="0,25,140,0"
                                          VerticalAlignment="Top" />
                    </Grid>

                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="List Employee"
           HorizontalAlignment="Left"
           VerticalAlignment="Bottom"
           FontSize="20"
           FontFamily="Bahnschrift SemiBold"
           Margin="20,10,10,10" />
                        <styles:Button x:Name="btn_add"
               ButtonBackground="#D6DC82"
               ButtonText="Add"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               Margin="5,10,40,10"
               ButtonCommand="{Binding AddCommand}" />
                    </Grid>
                    
                    <Grid>
                        <Rectangle Fill="#FFD96073"
                                   RadiusX="16"
                                   RadiusY="16"
                                   Margin="10,0,45,15"
                                   Height="350"
                                   VerticalAlignment="Top" />
                        <Border Grid.Column="1"
                                CornerRadius="16"
                                Background="White"
                                Margin="25,15,25,0"
                                Height="350"
                                VerticalAlignment="Top">
                            <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}"
                                      Background="Transparent"
                                      Margin="0,45,0,0" />
                        </Border>
                        <styles:SearchBar Margin="40,25,0,0"
                                          VerticalAlignment="Top"
                                          HorizontalAlignment="Left" />
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>