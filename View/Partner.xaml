<UserControl
    x:Class="OOP_EventsManagementSystem.View.Partner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OOP_EventsManagementSystem.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:styles="clr-namespace:OOP_EventsManagementSystem.Styles"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:cmd="http://www.galasoft.ch/xaml/behaviors"
    d:DesignHeight="555"
    d:DesignWidth="850"
    Background="#EFE9E4"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Border CornerRadius="16" Background="#FF79ADD4" Height="440" Width="270"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,25,25,15">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Rectangle Grid.Row="1" RadiusX="16" RadiusY="16" Fill="White" Margin="10,0,10,10" />

                    <TextBlock Text="Sponsor Description" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" Foreground="White" FontFamily="Bahnschrift SemiLight" FontSize="16" />

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Top" Margin="0,10,0,0" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Name" VerticalAlignment="Center" Margin="30,0,0,0" FontFamily="Bahnschrift SemiLight" FontSize="16" />
                                <Border Grid.Row="1"  CornerRadius="16" Background="#FFDCDCE6" Margin="25,5,15,5" Height="45">
                                    <TextBox Text="{Binding SelectedSponsor.SponsorName}" CaretBrush="{x:Null}" SelectionBrush="{x:Null}" SelectionTextBrush="{x:Null}" FontFamily="Bahnschrift SemiLight" FontSize="16" Margin="10,5,10,5" Background="{x:Null}" BorderBrush="{x:Null}" />
                                </Border>
                            </Grid>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Details" VerticalAlignment="Center" Margin="30,0,0,0" FontFamily="Bahnschrift SemiLight" FontSize="16" Grid.ColumnSpan="2" />
                                <Border Grid.Row="1"  CornerRadius="16" Background="#FFDCDCE6" Margin="25,5,15,5" Height="125" Grid.ColumnSpan="2">
                                    <TextBox Text="{Binding SelectedSponsor.SponsorDetails}" TextWrapping="Wrap" CaretBrush="{x:Null}" SelectionBrush="{x:Null}" SelectionTextBrush="{x:Null}" FontFamily="Bahnschrift SemiLight" FontSize="16" Margin="10,5,10,5" Background="{x:Null}" BorderBrush="{x:Null}" />
                                </Border>

                            </Grid>
                            <Grid Margin="25,0,0,0" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Sponsor Tier" VerticalAlignment="Top" Margin="5,0,0,0" FontFamily="Bahnschrift SemiLight" FontSize="16" />
                                <Border Grid.Row="1"  CornerRadius="16" Background="#FFDCDCE6" Margin="5,5,15,5" VerticalAlignment="Top">
                                    <ComboBox Margin="10,0,5,0" SelectedItem="{Binding SelectedSponsor.SponsorTierName}"
Width="190" Height="40"
 />
                                </Border>
                            </Grid>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Event Name" VerticalAlignment="Center" Margin="30,0,0,0" FontFamily="Bahnschrift SemiLight" FontSize="16" />
                                <Border Grid.Row="1"  CornerRadius="16" Background="#FFDCDCE6" Margin="25,5,15,5" Height="45">
                                    <ComboBox Margin="10,0,5,0" SelectedItem="{Binding SelectedSponsor.EventName}"
Width="190" Height="40"
 />
                                </Border>
                            </Grid>
                        </StackPanel>


                    </Grid>

                </Grid>

            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Style="{StaticResource GreenButton}" Content="Add" Height="45" Width="100" Margin="10,0"/>
                <Button Style="{StaticResource PinkButton}" Content="Delete" Height="45" Width="100" Margin="10,0"/>
            </StackPanel>
            </StackPanel>
        
        <StackPanel Grid.Column="1">
            <TextBlock Style="{StaticResource txt_header}" Text="List Partner" Margin="20"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Previous" Command="{Binding PreviousPageCommand}" />
                <Button Content="Next" Command="{Binding NextPageCommand}" />
            </StackPanel>
            <DataGrid x:Name="SponsorsDataGrid" 
                ItemsSource="{Binding Sponsors}" 
              AutoGenerateColumns="False" 
              Width="500" 
              Height="465" 
              IsReadOnly="True" 
              SelectedItem="{Binding SelectedSponsor}" >
                <i:Interaction.Triggers></i:Interaction.Triggers>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Sponsor Name" Binding="{Binding SponsorName}" />
                    <DataGridTemplateColumn Header="Sponsor Details" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SponsorDetails}" TextWrapping="Wrap" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Sponsor Tier Name" Binding="{Binding SponsorTierName}" />
                    <DataGridTextColumn Header="Event Name" Binding="{Binding EventName}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>