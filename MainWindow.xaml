<Window x:Class="OOP_EventsManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:OOP_EventsManagementSystem.View"
        xmlns:styles="clr-namespace:OOP_EventsManagementSystem.Styles"
        xmlns:view="clr-namespace:OOP_EventsManagementSystem.View"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="600" 
        Width="850"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Border CornerRadius="16" Background="#EFE9E4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!-- Navigate Bar -->
            <Grid MouseDown="Grid_MouseDown">
                <styles:NavigateBar DataContext="{Binding MainWindowVM}" />
            </Grid>

            <!-- Content Section -->
            <Grid Grid.Row="1">
                <ContentControl Content="{Binding CurrentView}" />
            </Grid>
        </Grid>
    </Border>
</Window>
